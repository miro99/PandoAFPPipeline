<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <servlet>
        <servlet-name>DocTypeServlet</servlet-name>
        <servlet-class>DocTypeServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CandidateImageServlet</servlet-name>
        <servlet-class>PandoAFP.CandidateImageServlet</servlet-class>
        <init-param>
            <param-name>candidateID</param-name>
            <param-value/>
        </init-param>
    </servlet>
    <servlet>
        <servlet-name>DocumentServlet</servlet-name>
        <servlet-class>PandoAFP.DocumentServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DocumentImageServlet</servlet-name>
        <servlet-class>PandoAFP.DocumentImageServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DocTypeServlet</servlet-name>
        <url-pattern>/DocTypeServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CandidateImageServlet</servlet-name>
        <url-pattern>/CandidateImage/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DocumentServlet</servlet-name>
        <url-pattern>/Documents</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DocumentImageServlet</servlet-name>
        <url-pattern>/DocumentImage</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
