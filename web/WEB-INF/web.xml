<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <servlet>
        <servlet-name>DocTypeServlet</servlet-name>
        <servlet-class>DocTypeServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CandidateImageServlet</servlet-name>
        <servlet-class>PandoAFP.CandidateImageServlet</servlet-class>
        <init-param>
            <param-name>candidateID</param-name>
            <param-value/>
        </init-param>
    </servlet>
    <servlet>
        <servlet-name>DocumentServlet</servlet-name>
        <servlet-class>PandoAFP.DocumentServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DocumentImageServlet</servlet-name>
        <servlet-class>PandoAFP.DocumentImageServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DocumentViewServlet</servlet-name>
        <servlet-class>PandoAFP.DocumentViewServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PipelineServlet</servlet-name>
        <servlet-class>PandoAFP.PipelineServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SearchServlet</servlet-name>
        <servlet-class>PandoAFP.SearchServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CommentServlet</servlet-name>
        <servlet-class>PandoAFP.CommentServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ShowCommentServlet</servlet-name>
        <servlet-class>PandoAFP.ShowCommentServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ThumbImageServlet</servlet-name>
        <servlet-class>PandoAFP.ThumbImageServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DocTypeServlet</servlet-name>
        <url-pattern>/DocTypeServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CandidateImageServlet</servlet-name>
        <url-pattern>/CandidateImage/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DocumentServlet</servlet-name>
        <url-pattern>/Documents</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DocumentImageServlet</servlet-name>
        <url-pattern>/DocumentImage</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DocumentViewServlet</servlet-name>
        <url-pattern>/DocumentView</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PipelineServlet</servlet-name>
        <url-pattern>/Index</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SearchServlet</servlet-name>
        <url-pattern>/Search</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CommentServlet</servlet-name>
        <url-pattern>/Comment</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ShowCommentServlet</servlet-name>
        <url-pattern>/ShowComment</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ThumbImageServlet</servlet-name>
        <url-pattern>/ThumbImage</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout> 
           30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <!-- <welcome-file>index.jsp</welcome-file> -->
        <welcome-file>Index</welcome-file>
    </welcome-file-list>
</web-app>
